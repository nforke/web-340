<div role="main" class="container" style="width: 75%;">
  <br /><br />

  <h3> Employee Listing</h3>

<% if (employee.length) { %>

<!-- Employee list to insert into index file -->
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Functions</th>
    </tr>
  </thead>

  <tbody>
    <% employee.forEach(function (entry) { %>
    <tr>
      <td><%= entry.Name %></td>
      <td style="width: 10%; text-align: center;">
        <a style="color: #fff" href="/view/<%= entry.Name %>">View
          <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
        </a>
      </td>
    </tr>
  <% }) %>
  </tbody>
  </table>
<% } else { %>
No entries! <a class="btn btn-secondary float-right" href="/new"> Add one!</a>
<% } %>
  <br />
</div>
