<!DOCTYPE html>
<html lang="en">
  <% include header %>

  <body>
    <% include navbar %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />

      <h2 class="container p-3 my-3 bg-dark text-white"> New Employee Entry Page </h2>
      <form method="post" action="/process">
        <div class="form-group">
          <label for="employeeName">Name:</label>
          <input type="text" class="form-control" id="Name" name="Name" />
        </div>

        <div class="form-group">
          <!-- CSRF token for security -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <button type="submit" class="btn btn-secondary float-right">Submit</button>
        </div>
      </form>

      <br /><br />

      <a class="btn btn-secondary float-left" href="/list">Return to About</a>
    </div>

    <% include scripts %>
  </body>
</html>
