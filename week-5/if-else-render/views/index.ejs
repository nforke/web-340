  <body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contact Us</a>
        </li>
      </ul>
    </nav>

    <div role="main" class="container">
      <br /><br />

      <h2>Friend List</h2>

      <!-- if check to see if array is greater than 0 -->
      <% if(names.length > 0) { %>
        <% for (var k = 0; k < names.length; k++) { %>  <!-- iterate over the array -->
          <div class="alert alert-success"><strong><%= names[k] %></strong></div>
        <% } %>
      <% } %>

    </div>
  </body>
</html>
